<% include partials/sidebar %>
            <div class="col-sm-9" style="vertical-align: baseline; padding-top: 50px; padding-bottom: 50px;"> 
                <% for(var i = 10*(pgnum-1); i < 10*(pgnum-1) + 10; i++){ %>
                    <div class="col-lg-6">
                        <div class="col-md-12">;

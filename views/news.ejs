                                    <a style="color: white; margin: 5px; padding: 2px; border: 1px solid white;" href="/<%=parseInt(pgnum) - 1 %>">prev</a>
                                    <a style="color: white; margin: 5px; padding: 2px; border: 1px solid white;" href="/%>">1</a>...
                                <% } %>
                                <% for(var i = parseInt(pgnum)+1; i< parseInt(pgnum)+6 && i<maxpg;i++){ %>
                                    <a style="color: white; margin: 5px; padding: 2px; border: 1px solid white;" href="/<%=i %>"><%=i%></a>
                                <% }; %>
                                <% if(parseInt(pgnum) < maxpg){ %>
                                    ...
                                    <a style="color: white; margin: 5px; padding: 2px; border: 1px solid white;" href="/<%=maxpg %>"><%=maxpg%></a>
                                    <a style="color: white; margin: 5px; padding: 2px; border: 1px solid white;" href="/<%=parseInt(pgnum) + 1 %>">next</a>
                                <% } %>
                        </div>
                    </div>
                </nav>  
            </div>
        
